<Page
    x:Class="MonumentManager.View.AddSculpturePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MonumentManager.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="White">
        <Rectangle Height="48" Fill="Lavender" VerticalAlignment="Top" />
        <TextBlock Text="Add new sculpture" FontSize="16" FontWeight="Bold" Height="48" VerticalAlignment="Top" Padding="10, 10, 0, 0"/>

        <ScrollViewer Margin="0,48,0,0">
            <StackPanel Margin="0,0,0,0" Orientation="Vertical" Padding="10,0" MinWidth="400" HorizontalAlignment="Left" >
                <TextBlock Text="Name:" />
                <TextBox x:Name="nameBox" PlaceholderText="asdf" Width="300" HorizontalAlignment="Left" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
    
</Page>
